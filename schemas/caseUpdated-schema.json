asyncapi: 2.3.0
info:
  title: Court Case Updated Event
  version: 0.0.1
  description: This schema defines the court case updated event
channels:
  courtCases:
    subscribe:
      message:
        $ref: '#/components/messages/CaseUpdated'
components:
  messages:
    CaseCreated:
      payload:
        type: object
        properties:
          number:
            type: string
            description: Court file number.  Appears on all court documents related to the case. Reference number for the case and guides how documents are gathered and reviewed.
            example: 12345
          level:
            type: string
            description: Court level for the case either Provincial or Supreme.
            example: 'Provincial'
          class:
            type: string
            description: Accused is an Adult or Youth. Determines how the court sits as a youth court or adult court and can change the venue as well.
            example: 'Adult'
          fileDescription:
            type: string
            description: Flags the file designation status. Indicates at a glance the type of case, and is used in scheduling and assignment of cases.
          charges:
            type: string
            description: A comma-separated list of charge codes associated with this court case.