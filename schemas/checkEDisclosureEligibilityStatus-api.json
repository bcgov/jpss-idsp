---
openapi: 3.0.2
info:
  title: Check Accused e-Disclosure Eligibility Status API
  version: 0.0.1
  description: This operation allows the calling application to check the the e-disclosure eligibility status for the identified accused.
paths:
  /accused/{accusedId}/checkEDisclosureEligibilityStatus:
    get:
      parameters:
      - name: accusedId
        in: path
        description: accused id
        required: true
        schema:
          type: string
      responses:
        200:
          content:
            application/json:
              schema:
                type: object
                properties:
                  eligible:
                    type: string
                    example: 'true'
          description: e-Disclosure Eligibility Status
        401:
          description: Not authorized
          content: {}
        404:
          description: accused id not found
          content: {}
      operationId: checkEDisclosureEligibilityStatus